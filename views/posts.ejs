<section>
    <div class="wrapper-cards">
        <% for (let post of posts) {%>
            <article class="ui-card">
                <a href="/post/<%= post.id %>/singlepost?user_name=<%=post.user_name%>&image_url=<%=post.image_url%>">
                    <img src="<%= post.image_url %>" alt="photo">
                </a>
                <footer class="ui-card-footer">
                    <h4>
                        Added by <a href="/users/<%= post.user_id %>/profile">
                            <%= post.user_name %>
                        </a>
                    </h4>
                    <span>On <%= post.date %></span>
                    <!-- <form action="/post/< %= post.id %>/singlepost">
                        <input type="hidden" name="user_name" value="< %= post.user_name %>" id="">
                        <input type="hidden" name="image_url" value="< %= post.image_url %>" id="">
                        <button>Comments</button>
                    </form> -->
                </footer>
            </article>
        <% }%>
    </div>
</section>